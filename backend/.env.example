# Required
OPENAI_API_KEY=your-openai-api-key-here

# Optional — model selection (defaults shown)
EMBEDDING_MODEL=text-embedding-3-small
COMPLETION_MODEL=gpt-4o-mini

# Optional — comma-separated list of allowed CORS origins (default shown)
# e.g., http://localhost:5173,http://example.com
CORS_ORIGINS=http://localhost:5173

# Optional — base URL of the running backend API, used by eval.py (default shown)
API_BASE=http://localhost:8000

# Optional — retry behaviour for transient OpenAI errors (defaults shown)
OPENAI_MAX_RETRIES=3
OPENAI_RETRY_BASE_DELAY=1.0
